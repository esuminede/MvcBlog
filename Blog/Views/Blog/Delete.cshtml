@model MvcBlog.Models.BlogPost

@{
    ViewBag.Title = "Blog Sil";
}

<h2>Blog Sil</h2>

<div class="alert alert-warning">
    <strong>Dikkat!</strong> Bu blog yazısını silmek üzeresiniz:
</div>

<dl class="row">
    <dt class="col-sm-2">Başlık</dt>
    <dd class="col-sm-10">@Model.Title</dd>

    <dt class="col-sm-2">İçerik</dt>
    <dd class="col-sm-10">@Model.Content</dd>
</dl>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <input type="submit" value="Sil" class="btn btn-danger" />
    @Html.ActionLink("İptal", "Index", null, new { @class = "btn btn-secondary ms-2" })
}