@model MvcBlog.Models.BlogPost

@{
    ViewBag.Title = "Yeni Blog Ekle";
}

<h2 class="mb-4">Yeni Blog Yazısı Ekle</h2>

@using (Html.BeginForm("Create", "Blog", FormMethod.Post, new { enctype = "multipart/form-data", @class = "row g-3" }))
{
    @Html.AntiForgeryToken()
    <div class="col-md-6">
        <label class="form-label">Başlık</label>
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
    </div>

    <div class="form-group mb-3">
        <label for="imageFile">Resim Yükle (isteğe bağlı):</label>
        <input type="file" name="imageFile" id="imageFile" class="form-control" />
    </div>

    <div class="col-12">
        <label class="form-label">İçerik</label>
        @Html.TextAreaFor(m => m.Content, new { @class = "form-control", rows = 5 })
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </div>
}


