@model MvcBlog.Models.BlogPost

@{
    ViewBag.Title = Model.Title;
}

<div class="container mt-4">
    <h2>@Model.Title</h2>
    <hr />
    @if (!string.IsNullOrEmpty(Model.ImagePath))
    {
        <img src="@Url.Content(Model.ImagePath)" alt="Görsel" style="max-width: 100%; height: auto;" />
    }
    <p class="mt-3">
        @Html.Raw(Model.Content)
    </p>

    <a href="@Url.Action("Index", "Blog")" class="btn btn-secondary mt-3">Geri Dön</a>
</div>
